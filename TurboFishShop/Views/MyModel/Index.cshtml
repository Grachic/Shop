@using TurboFishShop_Models;
@model IEnumerable<MyModel>
@{
	ViewData["Title"] = "MyModel";
}

<h1>Hello My favourite Model!</h1>

<p>
	<a class="btn btn-success" hasp-controller="Model" asp-action="Create">Create Model</a>
</p>

@if (Model.Count() > 0)
{
	<table class="table table-bordered table-striped" border="1" style="width:100%">
		<thead>
			<tr>
				<th>Name</th>
				<th>Number</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td width="50%">@item.Name</td>
					<td width="30%">@item.Number</td>
					<td width="20%">
						<a class="btn btn-primary" asp-controller="MyModel" asp-action="Edit" asp-route-Id="@item.Id">
							<i class="fa-solid fa-pen-to-square"></i>
							Edit
						</a>
						<a class="btn btn-danger" asp-controller="MyModel" asp-action="Delete" asp-route-Id="@item.Id">
							<i class="fa-solid fa-eraser"></i>
							Delete
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}